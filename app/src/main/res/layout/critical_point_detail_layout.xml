<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:theme="@style/AppTheme2">
    
    <ImageView
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:id="@+id/imagenDePuntoCritico"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textoTitulo"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imagenDePuntoCritico"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/escanear"
        android:layout_toRightOf="@+id/textoTitulo"
        android:background="@android:color/transparent"
        android:src="@drawable/camera"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ver_detalle"
        android:layout_toRightOf="@+id/escanear"
        android:background="@android:color/transparent"
        android:src="@drawable/plus"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/comment"
        android:layout_toRightOf="@+id/ver_detalle"
        android:background="@android:color/transparent"
        android:src="@drawable/bubble_comment"/>
    

</RelativeLayout>
